<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dashboard.dontclassic.TimeStatFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/text_vetrical"
                    android:text="@string/level_easy" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/card_vertical" >

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center">

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="100dp"
                                android:text="@string/games_played" />

                            <TextView
                                android:id="@+id/textView_GamesEasy_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/games_won" />

                            <TextView
                                android:id="@+id/textView_GamesWonEasy_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Best_time" />

                            <TextView
                                android:id="@+id/textView_GamesTimeEasy_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/text_vetrical"
                    android:text="@string/level_medium" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/card_vertical" >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center">

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="100dp"
                                android:text="@string/games_played" />

                            <TextView
                                android:id="@+id/textView_GamesMedium_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/games_won" />

                            <TextView
                                android:id="@+id/textView_GamesWonMedium_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Best_time" />

                            <TextView
                                android:id="@+id/textView_GamesTimeMedium_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/text_vetrical"
                    android:text="@string/level_hard" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/card_horizontal"
                    android:layout_height="@dimen/card_vertical" >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center">

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="100dp"
                                android:text="@string/games_played" />

                            <TextView
                                android:id="@+id/textView_GamesHard_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/games_won" />

                            <TextView
                                android:id="@+id/textView_GamesWonHard_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                        <TableRow
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:paddingRight="100dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Best_time" />

                            <TextView
                                android:id="@+id/textView_GamesTimeHard_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
</layout>